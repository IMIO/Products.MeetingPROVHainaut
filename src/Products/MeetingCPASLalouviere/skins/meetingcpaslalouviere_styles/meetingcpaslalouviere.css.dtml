    margin: 0.3em 0em -2.5em 0.3em !important;
}

#portal-globalnav {
    padding-left: 5.5em !important;
}

#premeetings dd.collapsibleContent {
    margin-left: 0;
}

/* Colors on states */
/* Items */
.state-itemcreated, .label-state-itemcreated {
    color: red !important;
}

.state-itemcreated_waiting_advices, .label-state-itemcreated_waiting_advices {
    color: red !important;
    background: transparent url(&dtml-portal_url;/ask_advices_by_itemcreator.png) no-repeat scroll 0 1px;
    padding: 1px 0 1px 18px !important;
}

.state-proposed_to_budgetimpact_reviewer, .label-state-proposed_to_budgetimpact_reviewer {
    color: red !important;
    background: transparent url(&dtml-portal_url;/proposeToBudgetImpactReviewer.png) no-repeat scroll 0 1px;
    padding: 1px 0 1px 18px !important;
}


.state-proposed_to_n1, .label-state-proposed_to_n1 {
