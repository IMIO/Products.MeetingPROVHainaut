    background: transparent url(&dtml-portal_url;/proposeToN2.png) no-repeat scroll 0 1px;
    padding: 1px 0 1px 18px !important;
}

.state-proposed_to_secretaire, .label-state-proposed_to_secretaire {
    color: DarkOrange !important;
    background: transparent url(&dtml-portal_url;/proposeToSecretaire.png) no-repeat scroll 0 1px;
    padding: 1px 0 1px 18px !important;
}

.state-proposed_to_president, .label-state-proposed_to_president {
    color: DarkOrange !important;
    background: transparent url(&dtml-portal_url;/proposeToPresident.png) no-repeat scroll 0 1px;
    padding: 1px 0 1px 18px !important;
}

.state-validated, .label-state-validated {
    color: blue !important;
}

.state-presented, .label-state-presented {
    color: brown !important;
}

.state-itemfrozen, .label-state-itemfrozen {
    color: cornflowerBlue !important;
}

.state-accepted, .label-state-accepted {
    color: green !important;
}

.state-accepted_but_modified {
    color: green !important;
    background: transparent url(&dtml-portal_url;/accepted_but_modified.png) no-repeat scroll 0 1px;
    padding: 1px 0 1px 18px !important;
}

.state-pre_accepted {
    color: green !important;
    background: transparent url(&dtml-portal_url;/pre_accepted.png) no-repeat scroll 0 1px;
    padding: 1px 0 1px 18px !important;
}

.actionMenuHeader .state-accepted_but_modified {
    color: green !important;
    background: transparent url(&dtml-portal_url;/accepted_but_modified.png) no-repeat scroll 0 3px;
    padding: 1px 0 1px 18px !important;
}

.state-delayed {
    color: grey !important;
}

.state-refused {
    color: violet !important;
}

/* Colors on states */
/* Meetings */
.state-created {
    color: red !important;
}

.state-frozen {
    color: cornflowerBlue !important;
}

.state-decided {
    color: black !important;
}

.state-closed {
    color: grey !important;
}

/* Add a highlight-red style useable in FCKeditor to highlight modified elements */
.highlight-red {
    color:red;
}

