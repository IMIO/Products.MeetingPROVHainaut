<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="meetingprovincehainaut_styles"
         meta_type="Filesystem Directory View"
         directory="MeetingPROVHainaut/skins/meetingprovincehainaut_styles"/>

 <object name="meetingprovincehainaut_templates"
         meta_type="Filesystem Directory View"
         directory="MeetingPROVHainaut/skins/meetingprovincehainaut_templates"/>
 
 <skin-path name="*">
  <layer insert-after="custom"
         name="meetingprovincehainaut_styles"/>
  <layer insert-after="custom"
         name="meetingprovincehainaut_templates"/>
 </skin-path>

</object>
